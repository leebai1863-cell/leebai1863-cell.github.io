<ul class="card-text font-weight-light list-group list-group-flush">
  {% for position in resume.academic_positions %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> 兼职 </span>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ position.name | default: "学术兼职" }}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
            {% for keyword in position.keywords %}
              {{ keyword }} {% unless forloop.last %} | {% endunless %}
            {% endfor %}
          </h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>