<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" 
     class="project-card-link">
    <div class="card h-100 hoverable project-card">
      <div class="row g-0 h-100">
        <!-- 左侧：图片 -->
        {% if project.img %}
        <div class="col-md-5">
          <div class="project-img-container h-100">
            {%
              include figure.liquid
              loading="eager"
              path=project.img
              sizes = "250px"
              alt="project thumbnail"
              class="project-img"
            %}
          </div>
        </div>
        {% endif %}
        
        <!-- 右侧：文本内容 -->
        <div class="{% if project.img %}col-md-7{% else %}col-12{% endif %}">
          <div class="card-body d-flex flex-column h-100">
            <div class="mb-auto">
              <h2 class="card-title project-main-title">{{ project.title }}</h2>
              <p class="card-text project-description">{{ project.description }}</p>
            </div>
            
            <!-- 如果需要，可以在这里添加其他信息 -->
            <div class="mt-2">
              {% if project.github %}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                </div>
                {% if project.github_stars %}
                  <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                    <i class="fa-solid fa-star"></i>
                    <span id="{{ project.github_stars }}-stars"></span>
                  </span>
                {% endif %}
              </div>
              {% endif %}
              
              <!-- 添加日期信息（如果项目中有date字段） -->
              {% if project.date %}
              <small class="text-muted d-block mt-1">
                <i class="fas fa-calendar-alt me-1"></i>{{ project.date | date: "%Y年%m月%d日" }}
              </small>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
/* 项目卡片样式 */
.project-card {
  border: 1px solid #eaeaea;
  border-radius: 8px;
  transition: all 0.3s ease;
  overflow: hidden;
}

.project-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  border-color: #3498db;
}

.project-card-link {
  text-decoration: none;
  color: inherit;
}

.project-card-link:hover {
  color: inherit;
}

/* 图片容器样式 */
.project-img-container {
  overflow: hidden;
  border-right: 1px solid #f0f0f0;
}

.project-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.project-card:hover .project-img {
  transform: scale(1.05);
}

/* 标题样式 */
.project-main-title {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 17px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制标题最多显示2行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 描述样式 */
.project-description {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 14px;
  color: #7f8c8d;
  line-height: 1.4;
  margin-bottom: 0;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* 限制描述最多显示3行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 卡片内容区域 */
.card-body {
  padding: 1.25rem;
  display: flex;
  flex-direction: column;
}

/* GitHub图标样式 */
.github-icon {
  display: flex;
  align-items: center;
  gap: 8px;
}

.github-icon .icon a {
  color: #333;
  font-size: 16px;
}

.github-icon .icon a:hover {
  color: #3498db;
}

/* 确保图片在移动设备上也能正常显示 */
@media (max-width: 768px) {
  .project-img-container {
    border-right: none;
    border-bottom: 1px solid #f0f0f0;
    height: 150px;
  }
  
  .project-main-title {
    font-size: 16px;
  }
  
  .project-description {
    font-size: 13px;
    -webkit-line-clamp: 2; /* 移动设备上显示2行 */
  }
  
  .card-body {
    padding: 1rem;
  }
}

/* 确保卡片高度一致 */
.row-cols-md-3 .col {
  display: flex;
}
</style>