<div class="col-12 mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" 
     class="project-card-link">
    <div class="card h-100 hoverable project-card">
      <div class="row g-0 h-100">
        <!-- 左侧：图片 -->
        {% if project.img %}
        <div class="col-md-4 col-lg-3">
          <div class="project-img-container h-100">
            {%
              include figure.liquid
              loading="eager"
              path=project.img
              sizes = "250px"
              alt="project thumbnail"
              class="project-img"
            %}
          </div>
        </div>
        {% endif %}
        
        <!-- 右侧：文本内容 -->
        <div class="{% if project.img %}col-md-8 col-lg-9{% else %}col-12{% endif %}">
          <div class="card-body d-flex flex-column h-100">
            <div class="mb-auto">
              <h2 class="card-title project-main-title mb-2">{{ project.title }}</h2>
              <div class="project-description-wrapper">
                <p class="card-text project-description mb-3">{{ project.description }}</p>
              </div>
            </div>
            
            <!-- 底部信息 -->
            <div class="project-footer mt-auto">
              {% if project.date %}
              <div class="date-info d-flex align-items-center">
                <i class="fas fa-calendar-alt me-2"></i>
                <span>{{ project.date | date: "%Y年%m月%d日" }}</span>
              </div>
              {% endif %}
              
              {% if project.github %}
              <div class="github-icon mt-2">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                </div>
                {% if project.github_stars %}
                  <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                    <i class="fa-solid fa-star"></i>
                    <span id="{{ project.github_stars }}-stars"></span>
                  </span>
                {% endif %}
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>

<style>
/* 项目卡片样式 - 整行显示 */
.project-card {
  border: 1px solid #eaeaea;
  border-radius: 8px;
  transition: all 0.3s ease;
  overflow: hidden;
  height: 200px; /* 固定高度，确保整行卡片高度一致 */
}

.project-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  border-color: #3498db;
}

.project-card-link {
  text-decoration: none;
  color: inherit;
}

.project-card-link:hover {
  color: inherit;
}

/* 图片容器样式 */
.project-img-container {
  overflow: hidden;
  border-right: 1px solid #f0f0f0;
  height: 100%; /* 使图片容器充满整个卡片高度 */
}

.project-img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 保持图片比例，覆盖整个容器 */
  transition: transform 0.3s ease;
}

.project-card:hover .project-img {
  transform: scale(1.05);
}

/* 标题样式 */
.project-main-title {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 10px;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制标题最多显示2行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 描述样式 */
.project-description-wrapper {
  max-height: 80px; /* 限制描述区域最大高度 */
  overflow: hidden;
}

.project-description {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 15px;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 0;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* 限制描述最多显示3行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 底部信息样式 */
.project-footer {
  border-top: 1px solid #f0f0f0;
  padding-top: 10px;
}

.date-info {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 14px;
  color: #95a5a6;
}

.date-info i {
  color: #3498db;
  font-size: 14px;
}

/* GitHub图标样式 */
.github-icon {
  display: flex;
  align-items: center;
  gap: 8px;
}

.github-icon .icon a {
  color: #333;
  font-size: 16px;
}

.github-icon .icon a:hover {
  color: #3498db;
}

/* 卡片内容区域 */
.card-body {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 确保所有卡片高度一致 */
.col-12 {
  display: flex;
}

/* 移动设备响应式 */
@media (max-width: 768px) {
  .project-card {
    height: auto; /* 移动设备上高度自适应 */
  }
  
  .project-img-container {
    border-right: none;
    border-bottom: 1px solid #f0f0f0;
    height: 150px;
  }
  
  .project-main-title {
    font-size: 17px;
    margin-top: 15px;
  }
  
  .project-description {
    font-size: 14px;
    -webkit-line-clamp: 2; /* 移动设备上显示2行 */
  }
  
  .card-body {
    padding: 1rem;
  }
}

/* 大屏幕设备优化 */
@media (min-width: 1200px) {
  .project-card {
    height: 220px; /* 大屏幕上稍微增加高度 */
  }
  
  .project-main-title {
    font-size: 20px;
  }
  
  .project-description {
    font-size: 16px;
  }
}
</style>