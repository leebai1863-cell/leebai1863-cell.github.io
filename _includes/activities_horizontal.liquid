<div class="col">
  <a href="{% if activity.redirect %}{{ activity.redirect }}{% else %}{{ activity.url | relative_url }}{% endif %}" 
     class="activity-card-link">
    <div class="card h-100 hoverable activity-card">
      <div class="row no-gutters h-100">
        {% if activity.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=activity.img sizes="(min-width: 768px) 156px, 50vw" alt="activity thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if activity.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ activity.title }}</h3>
            <p class="card-text">{{ activity.description }}</p>
            {% if activity.date %}
            <div class="activity-meta">
              <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>{{ activity.date | date: "%Y年%m月%d日" }}
              </small>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </a>
</div>