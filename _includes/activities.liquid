<div class="col-12 mb-4">
  <div class="activity-card-container">
    <div class="card h-100 hoverable activity-card">
      <div class="row g-0 h-100">
        <!-- 左侧：图片 -->
        {% if activity.img %}
        <div class="col-md-4 col-lg-3">
          <div class="activity-img-container h-100">
            {%
              include figure.liquid
              loading="eager"
              path=activity.img
              sizes="(min-width: 768px) 156px, 50vw"
              alt="activity thumbnail"
              class="activity-img"
            %}
          </div>
        </div>
        {% endif %}
        
        <!-- 右侧：文本内容 -->
        <div class="{% if activity.img %}col-md-8 col-lg-9{% else %}col-12{% endif %}">
          <div class="card-body d-flex flex-column h-100">
            <div class="mb-auto">
              <h2 class="card-title activity-main-title">{{ activity.title }}</h2>
              <p class="card-text activity-description">{{ activity.description }}</p>
            </div>
            
            <!-- 底部信息 -->
            <div class="activity-footer mt-auto">
              {% if activity.date %}
              <div class="date-info d-flex align-items-center">
                <i class="fas fa-calendar-alt me-3"></i>
                <span>{{ activity.date | date: "%Y年%m月%d日" }}</span>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* 活动卡片样式 - 整行显示 */
.activity-card {
  border: 1px solid #eaeaea;
  border-radius: 8px;
  transition: all 0.3s ease;
  overflow: hidden;
  height: 180px;
}

.activity-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  border-color: #3498db;
  cursor: default; /* 添加这行，将鼠标指针改为默认样式 */
}

.activity-card-container {
  text-decoration: none;
  color: inherit;
}

.activity-img-container {
  overflow: hidden;
  border-right: 1px solid #f0f0f0;
  height: 100%;
}

.activity-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.activity-card:hover .activity-img {
  transform: scale(1.05);
}

.activity-main-title {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 10px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.activity-description {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 15px;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.date-info {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 14px;
  color: #95a5a6;
}

.date-info i {
  color: #3498db;
  font-size: 14px;
}

.card-body {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.activity-footer {
  border-top: 1px solid #f0f0f0;
  padding-top: 10px;
}
</style>