<div class="col">
  <a href="{% if activity.redirect %}{{ activity.redirect }}{% else %}{{ activity.url | relative_url }}{% endif %}" 
     class="activity-card-link">
    <div class="card h-100 hoverable activity-card">
      {% if activity.img %}
        {%
          include figure.liquid
          loading="eager"
          path=activity.img
          sizes = "250px"
          alt="activity thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title activity-main-title">{{ activity.title }}</h2>
        <p class="card-text activity-description">{{ activity.description }}</p>
        
        <!-- 如果需要显示其他信息 -->
        {% if activity.date %}
        <div class="activity-meta">
          <small class="text-muted">
            <i class="fas fa-calendar-alt me-1"></i>{{ activity.date | date: "%Y年%m月%d日" }}
          </small>
        </div>
        {% endif %}
      </div>
    </div>
  </a>
</div>

<style>
.activity-card {
  border: 1px solid #eaeaea;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.activity-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  border-color: #3498db;
}

.activity-card-link {
  text-decoration: none;
  color: inherit;
}

.activity-main-title {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 17px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.4;
  margin-bottom: 8px;
}

.activity-description {
  font-family: "Times New Roman", SimSun, serif;
  font-size: 14px;
  color: #7f8c8d;
  line-height: 1.4;
  margin-bottom: 12px;
}

.activity-meta {
  font-size: 13px;
  color: #95a5a6;
}
</style>